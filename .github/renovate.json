{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": [
    "renovatebot",
    "dependencies"
  ],
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "baseBranches": [
    "main"
  ],
  "postUpdateOptions": ["gomodTidy"],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "groupName": "godeps",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["major", "minor", "patch"]
      
    }
  ]
}